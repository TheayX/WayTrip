<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.mapper.SpotMapper">

    <resultMap id="SpotResultMap" type="com.travel.entity.Spot">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="price" property="price"/>
        <result column="open_time" property="openTime"/>
        <result column="address" property="address"/>
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
        <result column="cover_image_url" property="coverImage"/>
        <result column="category_id" property="categoryId"/>
        <result column="region_id" property="regionId"/>
        <result column="heat_score" property="heatScore"/>
        <result column="avg_rating" property="avgRating"/>
        <result column="rating_count" property="ratingCount"/>
        <result column="is_published" property="published"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="category_name" property="categoryName"/>
        <result column="region_name" property="regionName"/>
    </resultMap>

    <select id="selectSpotPage" resultMap="SpotResultMap">
        SELECT s.*,
               c.name AS category_name,
               r.name AS region_name
        FROM spot s
        LEFT JOIN spot_category c ON s.category_id = c.id AND c.is_deleted = 0
        LEFT JOIN spot_region r ON s.region_id = r.id AND r.is_deleted = 0
        <where>
            s.is_deleted = 0
            <if test="published != null">
                AND s.is_published = #{published}
            </if>
            <if test="regionId != null">
                AND s.region_id = #{regionId}
            </if>
            <if test="categoryId != null">
                AND s.category_id = #{categoryId}
            </if>
            <if test="keyword != null and keyword != ''">
                AND s.name LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        <choose>
            <when test="sortBy == 'heat'">
                ORDER BY s.heat_score DESC
            </when>
            <when test="sortBy == 'rating'">
                ORDER BY s.avg_rating DESC
            </when>
            <when test="sortBy == 'price_asc'">
                ORDER BY s.price ASC
            </when>
            <when test="sortBy == 'price_desc'">
                ORDER BY s.price DESC
            </when>
            <otherwise>
                ORDER BY s.id DESC
            </otherwise>
        </choose>
    </select>

</mapper>
