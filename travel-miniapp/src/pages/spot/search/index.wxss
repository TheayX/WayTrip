.search-page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-btn {
  color: #999;
  padding: 10rpx;
}

.search-btn {
  margin-left: 20rpx;
  color: #409EFF;
  font-size: 28rpx;
}

/* 搜索结果 */
.spot-list {
  padding: 20rpx;
}

.spot-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.spot-image {
  width: 200rpx;
  height: 150rpx;
}

.spot-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.spot-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.spot-meta {
  display: flex;
}

.spot-region, .spot-category {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.spot-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.spot-rating {
  font-size: 24rpx;
  color: #ff9500;
}

.star {
  margin-right: 4rpx;
}

.spot-price {
  font-size: 30rpx;
  color: #f56c6c;
  font-weight: bold;
}

/* 提示 */
.search-tip, .empty {
  text-align: center;
  padding: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-tip, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}
