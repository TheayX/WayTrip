<view class="mine-container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <block wx:if="{{isLogin}}">
      <image class="avatar" src="{{userInfo.avatar || '/images/default-avatar.png'}}" mode="aspectFill" />
      <view class="user-info">
        <text class="nickname">{{userInfo.nickname || '微信用户'}}</text>
        <view class="preferences" wx:if="{{preferences.length > 0}}">
          <text class="tag" wx:for="{{preferences}}" wx:key="index">{{item}}</text>
        </view>
      </view>
    </block>
    <block wx:else>
      <image class="avatar" src="/images/default-avatar.png" mode="aspectFill" />
      <view class="login-btn" bindtap="handleLogin">
        <text>点击登录</text>
      </view>
    </block>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="goToOrders">
      <text class="menu-icon">📋</text>
      <text class="menu-text">我的订单</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToFavorites">
      <text class="menu-icon">❤️</text>
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleContact">
      <text class="menu-icon">📞</text>
      <text class="menu-text">联系客服</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section" wx:if="{{isLogin}}">
    <button class="logout-btn" bindtap="handleLogout">退出登录</button>
  </view>
</view>
